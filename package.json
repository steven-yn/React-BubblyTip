{
  "name": "react-bubblytip",
  "repository": {
    "type": "git",
    "url": "https://github.com/steven-yn/React-BubblyTip.git"
  },
  "private": false,
  "version": "0.1.0",
  "description": "You can easily display a tooltip bubble UI on components in your React project.",
  "main": "lib/src/index.js",
  "module": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "scripts": {
    "dev": "vite",
    "lint": "eslint src/ --ext .ts,.tsx --fix",
    "lint-staged": "lint-staged",
    "test:unit": "jest",
    "test:e2e": "cypress open",
    "build": "rm -rf lib && tsc && npm run minify-css",
    "minify-css": "postcss \"src/style/*.css\" --dir lib/src/style/ --ext .css",
    "prepublishOnly": "rm -rf lib && tsc && npm run minify-css"
  },
  "keywords": [
    "react",
    "next",
    "tooltip",
    "bubble",
    "popup"
  ],
  "author": "steven-yn",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "eslint --fix && prettier --write"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@cypress/react": "^7.0.3",
    "@cypress/vite-dev-server": "^5.0.5",
    "@swc/core": "^1.3.50",
    "@testing-library/dom": "^9.2.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "@types/react-test-renderer": "^18.0.0",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitejs/plugin-react-swc": "^3.3.0",
    "autoprefixer": "^10.4.14",
    "copyfiles": "^2.4.1",
    "cssnano": "^6.0.0",
    "csstype": "^3.1.2",
    "cypress": "^12.9.0",
    "eslint": "^8.38.0",
    "eslint-config-next": "^13.3.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-cypress": "^2.13.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.1",
    "postcss": "^8.4.23",
    "postcss-animation": "^0.0.12",
    "postcss-cli": "^10.1.0",
    "prettier": "^2.8.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "swc": "^1.0.11",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite": "^4.2.1"
  },
  "peerDependencies": {
    "next": "^12.0.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  }
}
